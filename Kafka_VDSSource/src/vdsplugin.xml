<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<vdsPlugin xmlns="http://www.informatica.com/VdsPlugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.informatica.com/VdsPlugin vds_plugin.xsd">

    <id>19191</id>
    <displayName>Kafka Source</displayName>
    <version>2.3.6</version>
    <type>SOURCE</type>

    <configuration>
        <fields>
            <field>
                <textControl>
                    <name>zkServer</name>
                    <displayName>ZooKeeper Server</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure>
                        <placeholder>localhost:2181</placeholder>
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>kafkaDestination</name>
                    <displayName>Kafka Destination</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure>
                        <placeholder>&lt;IP:Port&gt;
                        </placeholder>
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>topic</name>
                    <displayName>Topic</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure> 
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>groupId</name>
                    <displayName>group.id</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure> 
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>autoCommit</name>
                    <displayName>enable.auto.commit</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure>
                        <default>true</default>
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>commitInterval</name>
                    <displayName>auto.commit.interval.ms</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure>
                        <default>1000</default>
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>sessionTimeout</name>
                    <displayName>session.timeout.ms</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure>
                        <default>30000</default>
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>keyDeserializer</name>
                    <displayName>key.deserializer</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure>
                        <default>org.apache.kafka.common.serialization.StringDeserializer</default>
                    </stringTextField>
                </textControl>
            </field>
            <field>
                <textControl>
                    <name>valueDeserializer</name>
                    <displayName>value.deserializer</displayName>
                    <mandatory>true</mandatory>
                    <stringTextField>
                        <secure>false</secure>
                        <default>org.apache.kafka.common.serialization.StringDeserializer</default>
                    </stringTextField>
                </textControl>
            </field>   
        </fields>
    </configuration>
    
    <runTime>
        <pluginJar>Kafka_VDSSource.jar</pluginJar>
        <pluginClass>KafkaSource</pluginClass>
    </runTime>
    <!--
    <helpKey>kafka_target_properties</helpKey>
    -->
</vdsPlugin>